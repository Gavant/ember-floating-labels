<div class="container">
    <h1>Floating Label - Input</h1>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{fl-input value=inputInlineValue placeholder="Inline Version" textClass="form-control"}}
            </div>
            <div class="form-group">
                {{#fl-input value=inputBlockValue placeholder="Block Version"}}
                    {{input value=inputBlockValue class="form-control" placeholder="Static Placeholder"}}
                {{/fl-input}}
            </div>
            <div class="form-group">
                {{fl-input value=inputLgValue placeholder="Large Input" textClass="form-control input-lg"}}
            </div>
            <div class="form-group">
                {{fl-input value=inputSmValue placeholder="Small Input" textClass="form-control input-sm"}}
            </div>
        </div>
    </div>
    <h1>Floating Label - Select</h1>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{fl-select
                    options=inlineSelectOptions
                    value=selectInlineValue
                    placeholder="Inline Version"
                    selectClass="form-control"
                    emptyOptionText="Select a fruit..."
                    onchange=(action (mut selectInlineValue))
                }}
            </div>
            <div class="form-group">
                {{fl-select
                    options=customSelectOptions
                    value=selectLgValue
                    valuePath="abbrv"
                    labelPath="name"
                    placeholder="Large Select"
                    selectClass="form-control input-lg"
                    allowClear=false
                    onchange=(action (mut selectLgValue))
                }}
            </div>
            <div class="form-group">
                {{#fl-select
                    value=selectBlockValue
                    placeholder="Block Version"
                    selectClass="form-control input-lg"
                    emptyOptionText="Select something..."
                    onchange=(action (mut selectBlockValue))
                    as |select|
                }}
                    <optgroup label="Custom Group">
                        <option value="foo" selected={{eq "foo" selectBlockValue}}>Foo</option>
                        <option value="bar" selected={{eq "bar" selectBlockValue}}>Bar</option>
                    </optgroup>
                    <optgroup label="Standard Options">
                        {{#each inlineSelectOptions as |opt index|}}
                            <option value={{opt.value}} selected={{eq opt.value selectBlockValue}}>{{index}}. {{opt.label}}</option>
                        {{/each}}
                    </optgroup>
                {{/fl-select}}
            </div>
        </div>
    </div>
</div>
